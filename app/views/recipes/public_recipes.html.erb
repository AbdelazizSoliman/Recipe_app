<%= render partial: 'shared/navbar' %>

<div class="row">
  <% @public_recipes.each do |recipe| %>
    <div class="col-md-8 mb-4">
      <div class="card">
        <div class="card-body">
          <div class="row">
            <div class="col-md-6">
              <h5 class=""><%= recipe.name %></h5>
              <p class="">By: <%= recipe.user.name %></p>
            </div>
            <div class="col-6">
              <p class="">Total Food Items: <%= @total_food_items %></p>
              <p class="">Total Price: $<%= @total_price %></p>
              <a href="<%= recipe_path(recipe) %>" class="btn btn-primary">View Details</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>