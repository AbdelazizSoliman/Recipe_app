<div class="border-2 border-black flex gap-[5%] p-[3%] relative min-h-[140px]">
  <div>
    <h2 class="text-xl font-extrabold"><%= recipe.name %></h2>
    <% if recipe.user == current_user %>
      <%= form_tag(remove_recipe_path(recipe), method: :delete) do %>
        <%= submit_tag 'Remove', class: 'btn btn-danger btn-sm' %>
      <% end %>
    <% end %>
  </div>
  <div class="w-[65%]">
    <p><%= recipe.description %></p>
  </div>
  <a href="<%= recipe_path(recipe.id) %>" id="<%= recipe.id %>"  class="mt-5 pt-1">Details</a>
</div>


