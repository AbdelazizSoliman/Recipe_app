

<%= render partial: "shared/navbar"%>


<div class="container mt-5">

    <h3 class="text-center text-primary-emphasis"">Add the Information of your food below</h3>
    <div class="row mt-2">
        <div class="col-6 offset-3">
            <%= form_with(model: @food, local: true, class: 'form') do |form| %>
                <div class="form-group">
                    <%= form.label :name %>
                    <%= form.text_field :name, class: 'form-control', placeholder: 'Name of food' %>
                </div>
                <div class="form-group mt-3">
                    <%= form.label :measurement_unit %>
                    <%= form.text_field :measurement_unit, class: 'form-control', placeholder: 'Measuring Unit' %>
                </div>
                <div class="form-group mt-3">
                    <%= form.label :price %>
                    <%= form.number_field :price, class: 'form-control', placeholder: 'Food Price' %>
                </div>
                <div class="form-group mt-3">
                    <%= form.label :quantity %>
                    <%= form.number_field :quantity, class: 'form-control', placeholder: 'Food Quantity' %>
                </div>

                <%= form.submit "Add Food", class: "bg-dark bg-gradient text-info border border-0 mb-3 p-2 border-none mt-3" %>
            <% end %>
        </div>
    </div>
</div>

  